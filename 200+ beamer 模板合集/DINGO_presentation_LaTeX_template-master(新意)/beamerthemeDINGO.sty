		    \begin{column}{0.1\textwidth}
		      \vskip -10pt \pgfuseimage{logo}
		    \end{column}
		  \end{columns}
    }
	%footline
    \setbeamertemplate{footline}
    {
      \leavevmode%
      \includegraphics[width=\paperwidth, height=0.032\paperwidth]{logos/footnote_background}%background image
