    \def\hrulefill{\leavevmode\leaders\hrule height 1pt\hfill\kern\z@} %redefine hrulefill width	
  	\setbeamertemplate{frametitle}
	  {
		  \begin{columns}[T]
		    \begin{column}{0.9\textwidth}
		      {\vskip 5pt \hskip 4pt \insertframetitle \par\vskip -13pt \hrulefill} %frame title and slide number
