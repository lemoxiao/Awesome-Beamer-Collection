		    \begin{column}{0.9\paperwidth}
              \hskip 15pt              
              \insertshorttitle %change title to change footline text -> quck and dirty method
              \hfill
    		    \end{column}
		    \begin{column}{0.1\paperwidth}
               \hskip 15pt              
              \textbf{\insertframenumber}%/\inserttotalframenumber %uncomment to set page/all page format
		    \end{column}
		  \end{columns}
        \end{beamercolorbox}%
      }
      \vskip0pt
    }
